        app:layout_constraintEnd_toStartOf="@+id/buttonY"
        app:layout_constraintTop_toTopOf="@+id/buttonY" />

    <Button
        android:id="@+id/buttonÆ"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="40dp"
